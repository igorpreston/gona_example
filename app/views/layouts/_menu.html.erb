<% heading_buttons = heading_buttons || nil %>
<% links = [
  { label: 'Menus', path: menus_path, active: :inclusive},
  { label: 'Categories', path: categories_path, active: :inclusive },
  { label: 'Items', path: items_path, active: :inclusive },
  { label: 'Modifiers', path: modifiers_path, active: :inclusive },
] %>

<div class="block m-intro">
  <div class="content">
    <ul class="inline-flex items-center overflow-x-auto bg-white border border-white rounded-full w-auto">
      <% links.map do |link| %>
        <li class="shrink-0">
          <%= active_link_to link[:label], link[:path], active: link[:active], class_active: 'bg-gray-100 text-gray-900 transition', class_inactive: 'bg-white text-gray-500 hover:text-gray-900', class: 'px-3 py-2 rounded-full text-sm leading-normal font-medium block' %>
        </li>
      <% end %>
    </ul>
  </div>
</div>


<div class="block mt-12">
  <%= yield %>
</div>
