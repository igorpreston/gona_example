<%# Header %>
<div class="block m-intro">
  <div class="content">
    <div class="flex items-start justify-between">
      <%# Heading %>
      <div class="w-full flex-grow flex">
        <%# Back button %>
        <% if local_assigns.has_key?(:back_url) %>
          <div class="mr-4 shrink-0">
            <%= link_to back_url, class: 'btn' do %>
              <%= icon(Rails.application.config.fa_style, "arrow-left") %>
            <% end %>
          </div>
        <% end %>
        <%# End of Back button %>

        <%# Title %>
        <div class="block items-center flex-wrap">
          <h1 class="text-2xl font-semibold leading-normal text-gray-900">
            <%= yield :heading %>
          </h1>
          <% if content_for(:subheading).present? %>
            <p class="text-base text-gray-500 leading-normal font-normal">
              <%= yield :subheading %>
            </p>
          <% end %>
        </div>
        <%# End of Title %>
      </div>
      <%# End of Heading %>
      <%# Header actions %>
      <% if local_assigns.has_key?(:buttons) %>
        <div class="shrink-0">
          <div class="flex items-center flex-wrap -m-2">
            <% buttons.map do |button| %>
              <span class="shrink-0 p-2">
                <%= button %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
      <%# End of Header actions %>
    </div>
  </div>
</div>
<%# End of Header %>
