<div class="block mt-4">
  <div class="content">
    <% if organization.cover_image.attached? %>
      <div class="h-[200px] md:h-[200px] block bg-gray-100 rounded-xl overflow-hidden relative">
        <%= render partial: 'organizations/cover_image', locals: { organization: } %>
      </div>
    <% end %>
    <% if local_assigns.has_key?(:heading) ? true : false %>
      <div class="mt-6">
        <div class="block">
          <h1 class="text-2xl md:text-3xl text-gray-900 leading-normal font-normal">
            <%= organization.name %>
          </h1>
          <p class="text-sm text-gray-900 leading-normal font-normal mt-1 max-w-md">
            <%= organization.description %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
