<div class="pt-4 border-t border-gray-200">
  <div class="flex justify-between items-center">
    <p class="text-sm text-gray-500 leading-normal font-normal">
      Subtotal
    </p>
    <p class="text-sm text-gray-500 leading-normal font-normal">
      <%= order.subtotal&.format %>
    </p>
  </div>
  <% if order.organization.fee_added? %>
    <div class="flex justify-between items-center mt-2">
      <p class="text-sm text-gray-500 leading-normal font-normal">
        Service fee
        (<%= number_to_percentage(order.application_fee_percentage, precision: 1, strip_insignificant_zeros: true) %>)
      </p>
      <p class="text-sm text-gray-500 leading-normal font-normal">
        <%= Money.new(order.application_fee, order.location&.currency).format %>
      </p>
    </div>
  <% end %>
  <div class="flex justify-between items-center mt-2">
    <p class="text-sm text-gray-500 leading-normal font-normal">
      Sales tax
      (<%= number_to_percentage(order.tax_percentage, precision: 1, strip_insignificant_zeros: true) %>)
    </p>
    <p class="text-sm text-gray-500 leading-normal font-normal">
      <%= Money.new(order.tax, order.location&.currency).format %>
    </p>
  </div>
  <div class="flex justify-between items-center mt-2">
    <p class="text-sm text-gray-500 leading-normal font-normal">
      Tips
    </p>
    <p class="text-sm text-gray-500 leading-normal font-normal">
      --
    </p>
  </div>
  <div class="flex justify-between items-center mt-4 pt-4 border-t border-gray-200">
    <p class="text-lg text-gray-900 leading-normal font-medium">
      Total
    </p>
    <p class="text-lg text-gray-900 leading-normal font-medium">
      <%= Money.new(order.amount, order.location&.currency).format %>
    </p>
  </div>
</div>
