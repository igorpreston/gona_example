<% content_for :title, 'Locations' %>

<div class="block m-intro">
  <div class="content">

    <div class="flex">
      <%# Heading %>
      <div class="w-full flex-grow">
        <h1 class="text-2xl font-semibold leading-normal text-gray-900">
          Locations
        </h1>
      </div>
      <%# End of Heading %>
      <%# Header actions %>
      <div class="shrink-0">
        <div class="flex items-center flex-wrap -m-2">
          <span class="shrink-0 p-2">
            <%= link_to new_location_path, class: 'btn btn-primary', data: { turbo: false } do %>
              <%= icon(Rails.application.config.fa_style, 'plus', class: 'mr-2') %>
              New location
            <% end %>
          </span>
        </div>
      </div>
      <%# End of Header actions %>
    </div>
  </div>
</div>

<div class="block mt-12">
  <div class="content">
    <%= render partial: 'locations/locations', locals: { locations: @locations } %>

    <div class="mt-8">
      <%= render partial: 'components/pagination', locals: { pagy: @pagy } %>
    </div>
  </div>
</div>
