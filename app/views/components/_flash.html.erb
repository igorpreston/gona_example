<% flash.each do |type, msg| %>
  <div
    role="alert"
    data-controller="notification"
    data-action="awesome@window->notification#show click->notification#hide tap->notification#hide"
    data-transition-enter-from="opacity-0 translate-y-2"
    data-transition-enter-to="opacity-100 translate-y-0"
    data-transition-leave-from="opacity-100 translate-y-0"
    data-transition-leave-to="opacity-0 translate-y-2"
    data-notification-delay-value="3000"
    class="bg-black/90 rounded pointer-events-auto cursor-pointer p-4 transition transform duration-1000 hidden w-full"
  >
    <div class="flex justify-center w-full">
      <span class="text-white text-sm leading-normal font-normal">
        <%= msg %>
      </span>
    </div>
  </div>
<% end %>
