<div class="block m-intro">
  <div class="content">
    <% if local_assigns.has_key? :eyebrow %>
      <div class="block mb-2">
        <span class="text-xs text-blue-600 font-medium uppercase leading-normal">
          <% if local_assigns.has_key? :eyebrow_icon %>
            <span class="mr-1">
              <%= icon(Rails.application.config.fa_style, eyebrow_icon, class: 'text-sm') %>
            </span>
          <% end %>
          <%= eyebrow %>
        </span>
      </div>
    <% end %>
    <div class="flex flex-col lg:flex-row lg:items-center">
      <div class="block w-full">
        <div class="block">
          <h1 class="text-3xl text-gray-900 font-bold leading-normal">
            <%= local_assigns.has_key?(:heading) ? heading : 'Heading' %>
          </h1>

          <% if local_assigns.has_key? :subheading %>
            <p class="text-base text-gray-500 leading-normal mt-2 font-normal">
              <%= subheading %>
            </p>
          <% end %>
        </div>
      </div>
      <% if local_assigns.has_key? :buttons %>
        <div class="flex-shrink-0 mt-2 lg:mt-0 lg:ml-8">
          <ul class="flex flex-wrap flex-shrink-0 -m-1">
            <div class="lg:flex-shrink-0 mt-4 lg:mt-0 lg:ml-8">
              <ul class="flex flex-wrap flex-shrink-0 -m-1">
                <% buttons.map do |button| %>
                  <li class="p-2">
                    <%= button_to button[:url],
                      method: button[:method] || :get,
                      class: "btn".tap { |c| c << " btn-#{button[:type]}" if button[:type]
                    } do %>
                      <% if button[:icon] %>
                        <span class="mr-1">
                          <%= icon(Rails.application.config.fa_style, button[:icon]) %>
                        </span>
                      <% end %>
                      <%= button[:label] %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
            </div>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
