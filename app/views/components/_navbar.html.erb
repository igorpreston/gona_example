<nav class="relative hidden lg:block z-20">
  <div class="px-4 md:px-8 xl:px-12">
    <div class="relative h-[60px] flex items-center justify-between flex-row">
      <%# Logo %>
      <div class="flex-shrink-0 flex-grow basis-0 flex items-center h-full">
        <div class="h-full flex items-center">
          <span class="text-sm font-medium leading-normal text-blue-600">
            Beta version
          </span>
        </div>
      </div>
      <%# End of Logo %>

      <%# Profile %>
      <div class="basis-0 flex-grow flex-shrink-0 flex items-center justify-end h-full">
        <ul class="flex items-center h-full ml-4 -mr-2">
          <% button_class = 'rounded-full h-[34px] min-w-[34px] flex items-center justify-center transition p-1 relative text-sm overflow-hidden' %>
          <% button_class_active = 'bg-gray-900 text-white' %>
          <% button_class_inactive = 'text-gray-500 hover:bg-white hover:text-gray-900' %>

          <%# Suggestion %>
          <li
            class="mx-2 flex items-center relative"
            data-controller="popper"
            data-popper-target="element"
            data-action="mouseenter->popper#show mouseleave->popper#hide"
          >
            <%= active_link_to suggestions_path,
              data: { turbo_frame: :modal },
              class: button_class,
              class_inactive: button_class_inactive,
              class_active: button_class_active do
            %>
              <%= icon(Rails.application.config.fa_style, 'megaphone') %>
            <% end %>

            <div class="hidden rounded relative overflow-hidden" role="tooltip" data-popper-target="tooltip">
              <span class="block text-white py-1 px-2 text-xs font-normal leading-normal bg-black/95">
                <%= t('navbar.suggestion.popper') %>
              </span>
            </div>

          </li>
          <%# End of Suggestion %>

          <%# User %>
          <li class="mx-2 flex items-center relative">
            <%= active_link_to edit_merchant_registration_path, class: 'block text-sm font-normal leading-normal transition', class_active: 'text-gray-900', class_inactive: 'text-gray-500 hover:text-gray-900' do %>
              <%= current_merchant.name %>
            <% end %>
          </li>
          <%# End of User %>

          <%# Sign out %>
          <li class="mx-2 flex items-center relative">
            <%= button_to destroy_merchant_session_path, method: :delete, class: 'block text-sm text-gray-500 leading-normal font-normal transition hover:text-gray-900 bg-gray-50 hover:bg-gray-100 rounded px-2 py-1 border border-gray-100' do %>
              Sign out
            <% end %>
          </li>
          <%# End of Sign out %>
        </ul>
      </div>
      <%# End of Profile %>
    </div>
  </div>
</nav>
